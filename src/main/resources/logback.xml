<configuration>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
            by default -->
        <encoder>
<!--        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n-->
            <pattern>%msg
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>AkibaJavaTests.log</file>
        <append>false</append>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <!-- scelto un livello x, non vengono mostrati i log a sinistra di x -->
    <!-- TRACE - DEBUG - INFO - WARN - ERROR -->

    <!-- ES: nel package seguente non vengono mostrati i log TRACE, DEBUG -->
<!--    <logger name="it.unifi.simonesantarsiero" level="info" />-->

    <logger name="it.unimi.dsi.webgraph" level="error"></logger>

<!--    <logger name="it.unifi.simonesantarsiero.wcgraphs.newsumsweep" level="info"></logger>-->
    <logger name="it.unifi.simonesantarsiero.wcgraphs.newsumsweep" level="error"></logger>

    <!-- Strictly speaking, the level attribute is not necessary since -->
    <!-- the level of the root level is set to DEBUG by default. -->
    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>